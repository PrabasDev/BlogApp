<h2>Lista de Postagens:</h2>
<hr>    
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <span class="badge text-bg-success">{{categoria.nome}}</span> <br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar</button></a>
        </div>
    </div>
{{else}}

{{/each}}
<h1>{{categoria.nome}}</h1>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagens/{{slug}}">
            <button class="btn btn-success">Leia Mais</button>
        </a>
        <hr>
        <small>Data da Publicação: {{data}}</small><br>
    </div>
</div>
{{else}}
    <h5>Nenhuma Postagem :(</h5>   
{{/each}}